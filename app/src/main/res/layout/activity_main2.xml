<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images"
    android:gravity="top"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".MainActivity2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:gravity="center|top"
        android:text="Dashboard"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="248dp"
            android:layout_height="88dp"
            android:layout_marginBottom="24dp"
            android:foreground="@drawable/logistic"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/totalData"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="#D21312"
                android:padding="20dp"
                android:text="Total Data"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/totalBarangMasuk"
                android:layout_width="0dp"
                android:layout_height="182dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="#808080"
                android:padding="20dp"
                android:text="Total Barang Masuk"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Barang Masuk"
            android:textSize="20sp"
            android:background="#808080"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnKelolaAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Kelola Admin"
            android:textSize="20sp"
            android:background="#808080"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/Keluar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="Keluar"
            android:textSize="20sp"
            android:background="#D21312"
            android:textColor="@android:color/white" />

    </LinearLayout>
</LinearLayout>